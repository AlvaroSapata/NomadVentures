<div class="detallesDestinoValidar">
  <h2>Detalles Destino a Validar</h2>
  <div>
    <div class="card" style="width: 600px;">
      <img
        src="{{this.allDetails.image}}"
        class="card-img-top"
        alt="image"
        width="200px"
      />
      <div class="card-body detallesDestinoValidarTexts">
        <div>
          <h5 class="card-title">{{this.allDetails.title}}</h5>
          <h5 class="card-title">{{this.allDetails.price}}</h5>
          <h5 class="card-title">{{this.formatDate}}</h5>
          <h5 class="card-title">{{this.allDetails.maxPeople}}</h5>
          <h5 class="card-title">{{this.allDetails.lider.firstName}}
            {{this.allDetails.lider.lastName}}</h5>
        </div>
        <div class="detallesDestinoValidarBtns">
          <form
            action="/admin/{{this.allDetails._id}}/validate/aceptar"
            method="post"
          >
            <button
              class="detallesDestinoValidarBTN"
              type="submit"
              name="{{this.allDetails.isValidated}}"
            >Aceptar</button>
          </form>

          <form
            action="/admin/{{this.allDetails._id}}/validate/denegar"
            method="post"
          >
            <button
              class="detallesDestinoValidarBTN"
              type="submit"
              name="{{this.allDetails.isValidated}}"
            >Rechazar</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>