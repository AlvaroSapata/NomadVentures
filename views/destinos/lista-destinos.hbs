<div>

<h2>Expediciones</h2>

<div>

    {{#each allDestines}}

    <a href="/destinos/{{this._id}}">

    <div class="card" style="width: 300px;">
    <img src="{{this.image}}" class="card-img-top" alt="image" width="200px">
    <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">{{this.lider.firstName}} {{this.lider.lastName}}</li>
        <li class="list-group-item">{{this.formatedDate}}</li>
    </ul>
    </div>
    </a>
{{/each}}
</div>