<div class="detallesDestinoValidar">
  <h2>Detalles Destino</h2>
  <div>
    <div class="card arregloCard" style="width: 1200px; height:650px">
      <img src="{{this.allDetails.image}}" class="card-img-top" alt="image" style="width:750px"/>
      <div class="card-body detallesDestinoValidarTexts">
        <div>
          <img src="/images/logo-removebg-preview.png" alt="imagen" style="width:70px">
          <hr>
          <h5 class="card-title">{{this.allDetails.title}}</h5>
          <hr />
          <h5 class="card-title"><small>Precio: <br> {{this.allDetails.price}} €</small> </h5>
          <h5 class="card-title"><small>Plazas: <br> {{this.allDetails.maxPeople}}</small></h5>
          <h5 class="card-title">Lider: <br>
            {{this.allDetails.lider.firstName}}
            {{this.allDetails.lider.lastName}}</h5>
          <h5 class="card-title">Fecha: <br> {{this.formatDate}}</h5>
          <form action="/destinos/{{this.allDetails._id}}/join" method="post" >
            <button
              class="btn btn-primary loginBtn"
              type="submit"
              style="width:100%; position:relative; top:10px"
            >Apuntarme al viaje</button>
          </form>
        </div>
      </div>
    </div>
    <div "ajuste-cartas">
      {{#if this.errorJoinMessage}}
      <p style="color: red">{{this.errorJoinMessage}}</p>
      {{/if}}
      <div class="detallesDetalles">
        <h5>Detalles de la expedicion</h5>
        <p class="card-text">{{this.allDetails.details}}</p>
      </div>
    </div>
  </div>
</div>

