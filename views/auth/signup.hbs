<div class="signupForm">
  <div class="formulario">
    <div class="titulo-registro">
      <img src="/images/logo.png" alt="icono" width="30px" height="30px" />
      <h3 class="tituloregistro">Bienvenido a NomadVentures</h3>
    </div>
    <form action="/auth/signup" method="post">
      <div class="mb-3" style="width: 500px;">
        <label for="firstName" class="form-label">Nombre</label>
        <input type="text" class="form-control" name="firstName" />
      </div>

      <div class="mb-3">
        <label for="lastName" class="form-label">Apellido</label>
        <input type="text" class="form-control" name="lastName" />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Correo Electronico</label>
        <input type="email" class="form-control" name="email" />
        <div id="emailHelp" class="form-text">Nunca compartiremos tu email con
          terceros.</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" />
        <div id="passHelp" class="form-text">La contrase√±a debe tener minimo 8
          caracteres, entre ellos, una minuscula, una mayuscula y un caracter
          especial</div>
      </div>

      <div class="mb-3">
        <label for="phone" class="form-label">telefono</label>
        <input type="number" class="form-control" name="phone" min="0" />
      </div>

      <div class="form-check">
        <input class="form-check-input" type="radio" name="rol" value="guia" />
        <label class="form-check-label" for="rol">
          Guia
        </label>
      </div>
      <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="rol"
          value="usuario"
        />
        <label class="form-check-label" for="rol">
          Usuario
        </label>
      </div>

      <button type="submit" class="btn btn-primary signupBtn">Registrar</button>
      {{#if this.errorMessage}}
        <p style="color: red">{{this.errorMessage}}</p>
      {{/if}}
    </form>
  </div>
</div>